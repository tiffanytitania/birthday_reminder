<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Admin -->
        <TextView
            android:id="@+id/tvAdminWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat datang, Admin! 👑"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/comic_sans" />

        <!-- 🔹 Banner Komunitas (Upload Gambar) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCommunityBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🖼️ Gambar Komunitas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/comic_sans" />

                <!-- Image Preview -->
                <ImageView
                    android:id="@+id/imgCommunityBanner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="12dp"
                    android:scaleType="centerCrop"
                    android:background="@color/gray_200"
                    android:src="@drawable/ic_image_placeholder" />

                <!-- Button Upload -->
                <Button
                    android:id="@+id/btnUploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📤 Upload Gambar Komunitas"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comic_sans" />

                <ProgressBar
                    android:id="@+id/progressBarUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleLarge"
                    android:indeterminate="true"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Community Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCommunityInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏢 Data Komunitas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/comic_sans" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Nama Komunitas">

                    <EditText
                        android:id="@+id/etCommunityName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:fontFamily="@font/comic_sans" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Deskripsi">

                    <EditText
                        android:id="@+id/etCommunityDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:gravity="top"
                        android:fontFamily="@font/comic_sans" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnSaveCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💾 Simpan Data Komunitas"
                    android:backgroundTint="@color/success_green"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comic_sans" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Announcement Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📢 Pengumuman"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/comic_sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kirim pengumuman atau ucapan massal ke semua anggota komunitas"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/comic_sans" />

                <Button
                    android:id="@+id/btnSendAnnouncement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📣 Kirim Pengumuman Massal"
                    android:backgroundTint="@color/accent"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comic_sans" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Member Management Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👑 Manajemen User"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/comic_sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola role dan hapus user"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/comic_sans" />

                <Button
                    android:id="@+id/btnUserManagement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Kelola User"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comic_sans" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Export Data Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Ekspor Data"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/comic_sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export data ke CSV atau Text"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/comic_sans" />

                <Button
                    android:id="@+id/btnUserSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📥 Ekspor Data"
                    android:backgroundTint="@color/success_green"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comic_sans" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
